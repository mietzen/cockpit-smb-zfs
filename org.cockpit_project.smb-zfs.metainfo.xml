<?xml version="1.0" encoding="UTF-8"?>
<component type="cockpit-package">
  <id>org.cockpit_project.smb-zfs</id>
  <name>Cockpit Samba-ZFS</name>
  <summary>Manage Samba on ZFS</summary>
  <description>
    <p>A Cockpit plugin to manage Samba on a ZFS-backed system. It provides a graphical interface for the smb-zfs command-line tool.</p>
    <ul>
      <li>View system state, users, groups, and shares.</li>
      <li>Create, modify, and delete users, groups, and shares.</li>
      <li>Perform initial system setup.</li>
      <li>Change user passwords.</li>
    </ul>
  </description>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>LGPL-2.1-or-later</project_license>
  <url>https://github.com/mietzen/cockpit-smb-zfs</url>
  <screenshots>
    <screenshot type="default">
      <caption>Samba-ZFS Overview</caption>
      <image type="source" width="1022" height="602">https://raw.githubusercontent.com/mietzen/cockpit-smb-zfs/main/screenshot.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="0.1.0" date="2025-08-01"/>
  </releases>
  <launchable type="cockpit-manifest">smb-zfs</launchable>
</component>
